    </Update>
  </Language_en_US>
  
	
	<!-- France -->

	<Traits>
		<Update>
			<Where Type="TRAIT_ENHANCED_CULTURE" />
			<Set PolicyCostModifier="-15" ObsoleteTech="NULL" CityCultureBonus="0"/>
		</Update>
	</Traits>
  
