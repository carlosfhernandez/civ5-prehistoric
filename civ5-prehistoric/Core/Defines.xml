<?xml version="1.0" encoding="utf-8"?>
<!--
TODO

alter game speed due to addition of eras if and only if the player starts in prehistoric.

-->
<GameData>
	
	<Defines>
	
		<Update>
			<Where Name="START_YEAR"/>
			<Set Value="-6000"/>
		</Update>
		<Update>
			<Where Name="CITY_STRENGTH_DEFAULT"/>
			<Set Value="500"/>
		</Update>
		<Update>
			<Where Name="CITY_STRENGTH_HILL_CHANGE"/>
			<Set Value="300"/>
		</Update>
		<Update>
			<Where Name="MINOR_CIV_CONTACT_GOLD_FIRST"/>
			<Set Value="20"/>
		</Update>
		<Update>
			<Where Name="MINOR_CIV_CONTACT_GOLD_OTHER"/>
			<Set Value="10"/>
		</Update>

    <Row Name="UNOWNED_TILES_PER_GAME_ANIMAL">
      <Value>20</Value>
    </Row>

    <Update>
      <Set Value="60" />
      <Where Name="BARBARIAN_MAX_XP_VALUE" />
    </Update>    
    
  </Defines>
	
	
	<Eras>

    
    
    <!-- 
    For now, drastically slow down growth in prehistoric era, but need to find a way to cap
    the growth of a settlement.
    -->
    <Update>
      <Where Type="ERA_PREHISTORIC"/>
      <Set GrowthPercent="250"/>
    </Update>

    <Update>
      <Where Type="ERA_PREHISTORIC"/>
      <Set ResearchPercent="200"/>
    </Update>

    <Update>
      <Where Type="ERA_PREHISTORIC"/>
      <Set ConstructPercent="120"/>
    </Update>

    <Update>
      <Where Type="ERA_PREHISTORIC"/>
      <Set BuildPercent="120"/>
    </Update>


    <Update>
			<Where Type="ERA_ANCIENT"/>
			<Set GrowthPercent="110"/>
		</Update>

		<Update>
			<Where Type="ERA_ANCIENT"/>
			<Set ResearchPercent="130"/>
		</Update>


    <Update>
      <Where Type="ERA_CLASSICAL"/>
      <Set ResearchPercent="120"/>
    </Update>


    <Update>
      <Where Type="ERA_MEDIEVAL"/>
      <Set ResearchPercent="110"/>
    </Update>


    <Update>
      <Where Type="ERA_RENAISSANCE"/>
      <Set ResearchPercent="110"/>
    </Update>
    
    

	</Eras>
	
	
</GameData>